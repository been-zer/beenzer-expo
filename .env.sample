# ===================================
# Beenzer dApp - Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ===================================
# SERVER CONFIGURATION
# ===================================
# Backend server URL for API calls
REACT_APP_SERVER=https://beenzer-server-552200.onrender.com

# ===================================
# SOLANA BLOCKCHAIN CONFIGURATION
# ===================================
# Cost in SOL for minting a Beenzer NFT
REACT_APP_MINT_COST=0.01

# Solana RPC endpoint (optional - defaults to mainnet)
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# For devnet testing:
# SOLANA_RPC_URL=https://api.devnet.solana.com

# ===================================
# MAP SERVICES
# ===================================
# Google Maps API Key (required for iOS map functionality)
# Get your key at: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ===================================
# PHANTOM WALLET
# ===================================
# Phantom wallet deep link scheme (usually no need to change)
# PHANTOM_SCHEME=com.beenzerdapp.com

# ===================================
# SOCKET.IO CONFIGURATION
# ===================================
# Real-time communication settings (optional if using default server)
# SOCKET_URL=https://your-socket-server.com
# SOCKET_PATH=/socket.io

# ===================================
# EXPO CONFIGURATION
# ===================================
# Expo project ID (from app.json)
# EAS_PROJECT_ID=b37474c5-8142-444c-959c-d0e86ca23b53

# ===================================
# OPTIONAL: DEVELOPMENT SETTINGS
# ===================================
# Enable debug logs
# DEBUG=true

# API timeouts (milliseconds)
# API_TIMEOUT=30000

# Cache settings
# ENABLE_CACHE=true
